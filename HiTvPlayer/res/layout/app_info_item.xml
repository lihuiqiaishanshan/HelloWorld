<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/channel_num_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical" >
             <EditText
                android:id="@+id/edit_channel_name_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:textColor="@android:color/black"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/channel_name_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:focusable="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:textSize="20dp"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="52dp"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/fav_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/channellist_fav"
                android:gravity="center"
                android:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="52dp"
            android:layout_marginLeft="100dp"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/skip_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/channel_skip"
                android:gravity="center"
                android:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="52dp"
            android:gravity="center"
            android:layout_marginLeft="110dp"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/lock_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/channellist_lock"
                android:gravity="center"
                android:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="52dp"
            android:gravity="center"
            android:layout_marginLeft="120dp"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/move_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
