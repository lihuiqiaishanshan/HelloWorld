<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launcher_set_bg"
    android:orientation="vertical" >

    <!-- android:background="@drawable/setting_bg2" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/update_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/select_TV_version"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>
    <!-- android:background="@drawable/setting_bg10" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

      <ListView
          android:id="@+id/tv_version_listview"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:divider="@drawable/short_line"
          android:listSelector="@drawable/listview_background"
          android:fadingEdge="none"
          />
    </LinearLayout>

</LinearLayout>