            android:layout_width="100dp"
            android:layout_height="116dp" />

        <ImageView
            android:id="@+id/app_second"
            android:layout_width="100dp"
            android:layout_height="116dp" />

        <ImageView
            android:id="@+id/app_third"
            android:layout_width="100dp"
            android:layout_height="116dp" />

        <ImageView
            android:id="@+id/app_four"
            android:layout_width="100dp"
            android:layout_height="116dp" />

        <ImageView
            android:id="@+id/app_five"
            android:layout_width="100dp"
            android:layout_height="116dp" />
    </com.hisilicon.launcher.coverflow.CoverFlowLayout>

</LinearLayout>
